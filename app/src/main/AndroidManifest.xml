<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="jmapps.hadith40">

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/action_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".firstStart.SplashActivity"
            android:label="@string/action_app_name"
            android:theme="@style/ThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainScreen.MainActivity"
            android:label="@string/action_app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".mainScreen.listContainer.ListActivity"
            android:label="@string/action_title"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>